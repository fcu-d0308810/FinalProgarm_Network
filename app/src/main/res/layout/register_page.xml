<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/username_edittext"
        android:layout_width="220dp"
        android:hint="username"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password_edittext"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />
    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="password"
        android:textAlignment="center"
        android:id="@+id/password_edittext"
        android:layout_marginBottom="53dp"
        android:layout_above="@+id/invitationCode_edittext"
        android:layout_alignStart="@+id/username_edittext" />
    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="invitation code"
        android:textAlignment="center"
        android:id="@+id/invitationCode_edittext"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/confirm_button"
        android:layout_alignStart="@+id/password_edittext" />
    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/confirm_button"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/cancel_button"
        android:layout_alignStart="@+id/invitationCode_edittext" />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancel_button"
        android:layout_marginBottom="58dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/confirm_button" />

</RelativeLayout>