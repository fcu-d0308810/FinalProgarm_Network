<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/username_edittext"
        android:layout_width="220dp"
        android:hint="username"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp" />
    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:hint="password"
        android:textAlignment="center"
        android:id="@+id/password_edittext"
        android:layout_below="@+id/username_edittext"
        android:layout_alignStart="@+id/username_edittext" />
    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="invitation code"
        android:textAlignment="center"
        android:layout_below="@+id/password_edittext"
        android:layout_alignStart="@+id/password_edittext"
        android:layout_marginTop="36dp"
        android:id="@+id/invitationCode_edittext"/>
    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="confirm"
        android:layout_below="@+id/invitationCode_edittext"
        android:layout_alignStart="@+id/invitationCode_edittext"
        android:layout_marginTop="48dp"
        android:id="@+id/confirm_button"/>

</RelativeLayout>